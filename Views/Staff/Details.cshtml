@model HomeDetailsViewModel

@{
    ViewData["Title"] = "Home Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Model.Staff.FirstName @Model.Staff.LastName</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/b02.jpg" asp-append-version="true" style="width:300px"/>

                <h4>Staff ID : @Model.Staff.Id</h4>
                <h4>Email : @Model.Staff.Email</h4>
                <h4>Department : @Model.Staff.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="staff" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>